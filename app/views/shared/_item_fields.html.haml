.invoice-row.invoice-item.js-item
  .invoice-col.invoice-col--description.form-group
    = f.text_area :description, class: "form-control", rows: 1, "data-role": "item-description"

  .invoice-col.invoice-col--quantity.form-group
    = f.text_field :quantity, class: "form-control", "data-role": "quantity"

  .invoice-col.invoice-col--amount.form-group
    = f.text_field :unitary_cost, class: "form-control", "data-role": "unitary-cost"

  .invoice-col.invoice-col--discount.form-group
    = f.text_field :discount, class: "form-control", "data-role": "discount"

  .invoice-col.invoice-col--taxes.form-group
    = f.collection_select :tax_ids, Tax.enabled, :id, :to_s, {label: 'Taxes'}, {class: 'form-control c-select', multiple: true, "data-role": "taxes-selector"}

  .invoice-col.invoice-col--total.form-group
    %p.form-control-static.js-net-amount= f.object.net_amount
    = f.hidden_field :net_amount, {data: {role: 'net-amount'}}

  = link_to_remove_association f, {wrapper_class: 'js-item', class: 'destroy-icon'} do
    %i.material-icons.hidden-md-down delete
    %span.hidden-lg-up Remove Line

  = f.hidden_field :id
